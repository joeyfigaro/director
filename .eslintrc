{
  "extends": "airbnb",
  "rules": {
    "global-require": 0,
    "no-console": 0,
    "comma-dangle": 0,
    "no-underscore-dangle": 0,
    "new-cap": 0,
    "no-tabs": 0,
    "indent": ["error", "tab", { "SwitchCase": 1 }],
    "import/extensions": 0,
    "import/no-unresolved": "error",
    "import/prefer-default-export": 1,
    "arrow-body-style": [0, "as-needed"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "plugins": ["import"],
  "settings": {
      "import/resolver": {
          "babel-module": {}
      }
  }
}
